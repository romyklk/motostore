<section class="bg-[#f0f9ff] py-5 px-2">
	<div
		class="flex flex-col md:flex-row items-center justify-between px-24">

		<!-- Filtre par marque -->
		<div
			class="relative" x-data="{ open: false }">
			<!-- Bouton du dropdown -->
			<div @click="open = !open" class="flex items-center cursor-pointer">
				<span class="mr-2">Trier par marque</span>
				<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewbox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M10 12l-5-5 1.5-1.5L10 9l3.5-3.5L15 7l-5 5z" clip-rule="evenodd"/>
				</svg>
			</div>

			<!-- Dropdown -->
			<div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg">
				<ul
					class="py-1">
					<!-- Boucle sur les options de marque -->
					{% for mark in marks %}
						<!-- Vérifier si la marque contient des annonces -->
						{% if mark.ads|length >= 1 %}
							<!-- Afficher l'option -->
							<li>
								<a href="{{path('app_mark_show',{'slug':mark.name})}}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{{ mark.name }}</a>
							</li>
						{% endif %}
					{% endfor %}
				</ul>
			</div>
		</div>


		<!-- Tri -->
		<div
			class="relative" x-data="{ open: false }">
			<!-- Bouton du dropdown -->
			<div @click="open = !open" class="flex items-center cursor-pointer">
				<span class="mr-2">Trier par</span>
				<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewbox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M10 12l-5-5 1.5-1.5L10 9l3.5-3.5L15 7l-5 5z" clip-rule="evenodd"/>
				</svg>
			</div>

			<!-- Dropdown -->
			<div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg">
				<ul
					class="py-1">
					<!-- Options de tri -->
					<li>
						<a href="{{ path('app_mark_filter', {'sort': 'asc'}) }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Prix croissant</a>
					</li>
					<li>
						<a href="{{ path('app_mark_filter', {'sort': 'desc'}) }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Prix décroissant</a>
					</li>
					<li>
						<a href="{{ path('app_mark_filter', {'sort': 'desc_date'}) }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Plus récent</a>

					</li>
					<li>
						<a href="{{ path('app_mark_filter', {'sort': 'asc_date'}) }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Plus ancien</a>

					</li>
				</ul>
			</div>
		</div>


		<!-- Recherche -->
		<div class="filter-item flex flex-col md:flex-row mb-4 md:mb-0">
			{{ form_start(form, { 'attr': {'class': 'flex w-full md:w-auto'} }) }}
			{{ form_row(form.q, { 'attr': {'class': 'search-input h-10'} }) }}
			<button type="submit" class="rounded bg-[#6c63ff] px-2 md:px-6 py-2 md:py-2 md:ml-4 mt-4 md:mt-0 text-sm font-medium text-white shadow hover:bg-red-700 focus:outline-none focus:ring active:bg-red-500">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);">
					<path d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"></path>
				</svg>
			</button>
			{{ form_end(form) }}
		</div>


	</div>
</section>
